#include <stdio.h>
void diff(int a[],int n,int key);
int main()
{
    int n,t,key;
    printf("Enter number of test cases: ");
    scanf("%d",&t);
    while(t--)
    {
        printf("Enter no of elements in an array: ");
        scanf("%d",&n);
        int a[n];
        for(int i=0;i<n;i++)
        {
            scanf("%d",&a[i]);
        }
        printf("Enter the key: ");
        scanf("%d",&key);
        diff(a,n,key);
    }
}
void diff(int a[],int n,int key)
{
    int i,j,d,c=0;
    for(i=0;i<n;i++)
    {
       for(j=i+1;j<n;j++)
       {
            d=a[i]-a[j];
            if(d==key||d*-1==key)
            c++;
        }
    }
    printf("%d\n",c);
}
